<p id="notice"><%= notice %></p>

<%= link_to 'Back', job_sites_path %> |
<%= link_to 'Edit', edit_job_site_path(@job_site) %> |
<%= link_to 'Destroy', @job_site, method: :delete, data: { confirm: 'Are you sure?' } %>

<div class="show-job-container">

<div class="box address-box"><%= @job_site.address %></div>
<div class="box area-box">
	<% if @job_site.area.presence %>
		<%= @job_site.area.name %>
	<% else %>
		N/A
	<% end %>
</div>
<div class="box builder-box"><%= @job_site.builder.name %></div>
<div class="box supervisor-box">
	<% if @job_site.supervisor.presence %>
		<%= @job_site.supervisor.name %>
	<% else %>
		N/A
	<% end %>
</div>
<div class="box stage-box"><%= @job_site.building_stage.stage %></div>
<div class="box notes-box">
	<div class="box notes-title">Notes</div>
	<% @notes.each do |note| %>
		<div class="box notes-entry">
			<p><%= note.title + " - " + note.created_at.strftime("%b %-d, %Y") %></p>
			<p><%= note.body %></p>
		</div>
		<div class="box notes-navi">
			<%= link_to 'Edit Note', edit_job_site_note_path(@job_site, note) %>
			<BR>
			<%= link_to 'Delete Note', note, method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
	<% end %>
	<div class="box notes-new">
		<%= link_to 'New Note', new_job_site_note_path(@job_site) %>
	</div>
	</div>
</div>





