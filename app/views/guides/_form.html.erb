<%= form_with(model: guide, local: true) do |form| %>
  <% if guide.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(guide.errors.count, "error") %> prohibited this builder from being saved:</h2>

      <ul>
      <% guide.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.trix_editor :body, id: :note_body %>
  </div>

  <div class="field">
    <%= form.label :guide_section %>
    <%= collection_select( :guide, :guide_section_id, GuideSection.all, :id, :title, 
    :include_blank => "No Section" ) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


